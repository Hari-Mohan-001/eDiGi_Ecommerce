    <section>
        <div class="row" style="margin-top: 70px;">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% banners.forEach((banner, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="/bannerimages/<%= banner.image %>" class="d-block w-100" alt="Banner Image" style="height: auto; max-height: 400px; width: 100%; object-fit: cover;">
                  <div class="carousel-caption">
                    <h2 style="font-weight: bolder; margin-bottom: 0px;"><%= banner.name %></h2>
                    <h3 style="margin-bottom: 80px;"><%= banner.description %></h3>
                  </div>
                </div>
              <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </section>
      
