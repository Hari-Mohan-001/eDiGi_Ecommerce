
<%- include("../layouts/header.ejs") %>
<br><br>
 <!--============================
        CART VIEW START
    ==============================-->
    <section class="fp__cart_view mt_125 xs_mt_95 mb_100 xs_mb_70">
        <div class="container">
            <%if(products.length>0){%> 
            <div class="row">
                <div class="col-lg-9 wow fadeInUp" data-wow-duration="1s">
                    <div class="fp__cart_list">
                        <div class="table-responsive">  
                            
                            <table> 
                                <tbody>   
                                        
                                    <tr>
                                        <th class="fp__pro_img">
                                            Image
                                        </th>

                                        <th class="fp__pro_name">
                                            details
                                        </th>

                                        <th class="fp__pro_status">
                                            price
                                        </th>

                                        <th class="fp__pro_select">
                                            quantity
                                        </th>

                                        <th class="fp__pro_tk">
                                            total
                                        </th>

                                        <th class="fp__pro_icon">
                                            <a class="clear_all">Delete</a>
                                        </th>
                                    </tr>
                                   
                                    <%if(products.length === 0) {%>

                                        
                                            <h6>Your Cart is empty</h6>
                                       
                                        <%} else { %>
    
                                            <%products.forEach((product , index)=> {%>
                                   
                                    <tr data-id="<%=product.cartItems[0]._id%>"> 

                                        <td class="fp__pro_img"><img src="/cropped_images/<%=product.cartItems[0].image[0]%>" alt="product"
                                                class="img-fluid w-100">
                                        </td>
                                        
                                        <td class="fp__pro_name">
                                            <a ><%=product.cartItems[0].productName%></a>
                                            
                                            <p><%=product.cartItems[0].categoryname.name%></p>
                                           
                                        </td>

                                        <td class="fp__pro_status">
                                            <h6> &#x20b9; <%=product.cartItems[0].price%></h6>
                                        </td>

                                        <td class="fp__pro_select">
                                            <div class="quentity_btn">
                                               
                                                <input type="hidden" value="<%= product.cartItems[0]._id%>" name="productId">
                                                <%if(product.quantity>1) {%>
                                                <button reduceBtn-id="<%= product.cartItems[0]._id%>"  onclick="reduceQuantity('<%= product.cartItems[0]._id%>')" class="btn btn-danger"><i class="fal fa-minus"></i></button>
                                                <%} else {%>
                                                    <button reduceBtn-id="<%= product.cartItems[0]._id%>"  onclick="reduceQuantity('<%= product.cartItems[0]._id%>')"  disabled class="btn btn-danger"><i class="fal fa-minus"></i></button>
                                                    <%}%>

                                            
                                                <input quantity-id="<%= product.cartItems[0]._id%>" type="text" placeholder="<%=product.quantity%>" value="<%=product.quantity%>">

                                                
                                                    <input type="hidden" value="<%= product.cartItems[0]._id%>" name="productId">
                                                    <%if(product.quantity===product.cartItems[0].stock){%>
                                                <button    addToCartBtn-id="<%= product.cartItems[0]._id%>"  onclick="addToCart('<%= product.cartItems[0]._id%>')"   disabled class="btn btn-success"><i class="fal fa-plus"></i></button>
                                                    <%} else {%>
                                                        <button addToCartBtn-id="<%= product.cartItems[0]._id%>"  onclick="addToCart('<%= product.cartItems[0]._id%>')" class="btn btn-success"><i class="fal fa-plus"></i></button>
                                                        <%}%>
                                                
                                            
                                            </div>
                                        </td>
                                        
                                      <%if(productTotal && productTotal.length>0) {%>
                                        <td class="fp__pro_tk">
                                            <h6 productTotal-id="<%= product.cartItems[0]._id%>">&#x20b9; <%=productTotal[index].total%></h6>
                                        </td>
                                      <%}%>
                                        <td class="fp__pro_icon">
                                            <a onclick="removeItem('<%=product.cartItems[0]._id%>')"><i class="far fa-times"></i></a>
                                        </td>
                                    </tr>
                                    <%})%>
                                <%}%>
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 wow fadeInUp" data-wow-duration="1s">
                    <div class="fp__cart_list_footer_button">
                        <%if(cartTotal.length>0){%>
                        <h6>total cart</h6>
                        <%}%>
                        <%if(cartTotal && cartTotal.length>0) {%>
                        <p>subtotal: <span id="subTotal">Rs.<%=cartTotal[0].total%></span></p>
                        <p>delivery: <span>Rs.00.00</span></p>
                        <p>discount: <span>Rs.00.00</span></p>
                        <p class="total"><span>total:</span> <span id="cartTotal">Rs.<%=cartTotal[0].total%></span></p>
                        <%}%>
                        
                        <%if(cartTotal.length>0){%>
                        <a class="common_btn" href="/checkout">checkout</a>
                        <%}%>
                    </div>
                </div>
            </div>
            <%} else{ %>
                <h3>Your cart is empty!!!</h3>
                <%}%>
        </div>
    </section>
    <!--============================
        CART VIEW END
    ==============================-->
    
    <script src="/js/users/cartManagement.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>

    <%- include("../layouts/footer.ejs") %>


   