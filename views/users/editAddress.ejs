<%- include("../layouts/header.ejs") %>

<br><br>

<section class="fp__cart_view mt_125 xs_mt_95 mb_100 xs_mb_70">
    <div class="container" style="margin-right: 50px;">
        <div class="row">
            <div class="col-lg-8 col-lg-7 wow fadeInUp" data-wow-duration="1s">
                <div class="fp__checkout_form">
                    <div class="fp__check_form">

                        <div class="fp__address_modal">
                            <div class="" id="address_modal" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="address_modalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="address_modalLabel">Update address
                                            </h1>
                                            <br><br>
                                            
                                        </div>
                                        
                                        <div class="modal-body">
                                            <br>
                                            
                                            <form action="/editAddress" , method="post">
                                                <div class="row">
                                                    
                                                    <br>
                                                    <div class="col-md-12 col-lg-12 col-xl-12">
                                                        <div class="fp__check_single_form">
                                                            <input type="text"
                                                                placeholder="Enter the full name" name="fullName" value="<%=address.address[0].fullName%>">
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text" placeholder="Country" name="country" value="<%=address.address[0].country%>">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text"
                                                                placeholder="Apartment,House No" name="house" value="<%=address.address[0].house%>">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text" placeholder="Town / City *" name="city" value="<%=address.address[0].city%>">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text" placeholder="State *" name="state" value="<%=address.address[0].state%>">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text" placeholder="Zip *" name="pincode" value="<%=address.address[0].pincode%>">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                                        <div class="fp__check_single_form">
                                                            <input type="text" placeholder="Phone *" name="number" value="<%=address.address[0].number%>">
                                                        </div>
                                                    </div>

                                                    <input type="hidden" name="id" value="<%=address.address[0]._id%>">
                                                   
                                                   
                                                    <div class="col-12">
                                                        <div class="fp__check_single_form m-0">
                                                            <button type="submit" class="common_btn">Update</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                        


                    </div>
                </div>
            </div>

           
        </div>
    </div>
</section>

    <%- include("../layouts/footer.ejs") %>