<%- include("../layouts/header.ejs") %>
 <br><br>
    <section class="fp__dashboard mt_120 xs_mt_90 mb_100 xs_mb_70">
        <div class="container">
            <div class="fp__dashboard_area">
                <div class="row">
                    <div  id="v-pills-settings" role="tabpanel"
                    aria-labelledby="v-pills-settings-tab">
                    <div class="fp_dashboard_body fp__change_password">
                        <div class="fp__review_input">
                            <h3>change password</h3>
                            <div class="comment_input pt-0">
                                <form action="/changePassword" , method="post">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="fp__comment_imput_single">
                                                <label>Current Password</label>
                                                <input type="password" placeholder="Current Password" name="currentPassword">
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="fp__comment_imput_single">
                                                <label>New Password</label>
                                                <input type="password" placeholder="New Password" name="newPassword">
                                            </div>
                                        </div>
                                        <div class="col-xl-12">
                                            
                                            <button style="margin-left: 480px;" type="submit"
                                                class="common_btn mt_20">submit</button>
                                        </div>
                                        <% if(typeof message !== "undefined") { %>
                                            <p style="color: rgb(60, 15, 224);"><%=message%></p>
                                          <% } %>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("../layouts/footer.ejs") %>