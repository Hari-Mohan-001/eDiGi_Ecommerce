                            <h2>Add Category</h2>
                            <p>Enter the credentials</p>
                            <form action="/admin/addCategory" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label> Category Name</label>
                                            <input type="name" placeholder="Name" name="categoryName" id="categoryName" required>
                                            <span id="categoryNameError" style="color: red;"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label>Image</label>
                                            <div class="img">
                                                <img style="max-width: 50%; height: auto;" class="img-fluid w-100" src="" id="imageView" alt="Selected Image">
                                                </div>
            
                                                <input type="file" placeholder="Password" name="image" id="categoryImage" onchange="changeImage(event)" accept="image/*">
                                            <span id="categoryImageError" style="color: red;"></span>
                                        </div>
                                    </div>
