     <script>
         const categoryName = document.getElementById("categoryName")
        const categoryImage = document.getElementById("categoryImage")
        const categoryNameError = document.getElementById("categoryNameError")
        const categoryImageError = document.getElementById("categoryImageError")
        const categoryNamePatern = /^[A-Z][a-z]+(\s[A-Z][a-z]{0,25}){0,1}$/

        const categoryNameFunc= ()=>{
            if(!categoryNamePatern.test(categoryName.value)){
                categoryNameError.textContent = 'Inavlid Category Name, should start with an uppercase letter'
                return false
            }else{
                categoryNameError.textContent = ""
                return true
            }
        }

        categoryName.addEventListener("input" , categoryNameFunc)

        categoryImage.addEventListener("change" , ()=>{
            const file = categoryImage.files[0]
            if(!file.type.startsWith("image/")){
                categoryImageError.textContent = "Select an image file"
                return false
            }else{
                categoryImageError.textContent = ""
                return true
            }
        })

        let isFormValid = false
        const formFunctions =[categoryNameFunc ]
        document.getElementById("addButton").addEventListener("click", (event)=>{
            if(formFunctions.every((fun) => fun())){ 
                isFormValid = true
            }
            if(isFormValid === false){
                event.preventDefault()
                alert("Please enter the relevent details to proceed")
            }else{
                form.submit()
            }
        })
            
        function changeImage(event){
            document.getElementById("imageView").src = URL.createObjectURL(event.target.files[0])

        }

     </script>    
        
