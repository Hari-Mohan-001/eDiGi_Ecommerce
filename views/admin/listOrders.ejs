            </div>
        </div>
    </nav>
    <br><br>

    <section class="fp__dashboard mt_120 xs_mt_90 mb_100 xs_mb_70">
        <div class="container">
            <div class="fp__dashboard_area">
                <div class="row">
                    <div class="col-xl-3 col-lg-4 wow fadeInUp" data-wow-duration="1s">
                        <div class="fp__dashboard_menu">
                            <div class="dasboard_header">
                                <div class="dasboard_header_img">
                                    <img src="./images/Admin.png" alt="Admin" class="img-fluid w-100">
                                    <label for="upload"><i class="fas fa-camera"></i></label>
                                    <input type="file" id="upload" hidden>
                                </div>
                                <h2>Admin</h2>
                            </div>
                            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist"
                                aria-orientation="vertical">
                                <button class="nav-link active" id="dashboard-tab" data-bs-toggle="pill"
                                    data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home"
                                    aria-selected="true"><span><i class="fas fa-user"></i></span>Dashboard</button>

                                <button class="nav-link" id="users-tab" data-bs-toggle="pill"
                                    data-bs-target="#v-pills-address" type="button" role="tab"
                                    aria-controls="v-pills-address" aria-selected="true"><span><i
                                            class="fas fa-user"></i></span>Users List</button>

                                <button class="nav-link" id="orders-tab" data-bs-toggle="pill" type="button" role="tab"
                                    aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span> Orders </button>

                                <button class="nav-link" id="products-tab" data-bs-toggle="pill" type="button"
                                    role="tab" aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span>Products</button>

                                <button class="nav-link" id="category-tab" data-bs-toggle="pill" type="button"
                                    role="tab" aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span>Category</button>

                                <button class="nav-link" id="coupon-tab" data-bs-toggle="pill" type="button" role="tab"
                                    aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span>Coupon</button>

                                <button class="nav-link" id="sales-tab" data-bs-toggle="pill" type="button" role="tab"
                                    aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span>Sales Report</button>

                                <button class="nav-link" id="productOffer-tab" data-bs-toggle="pill" type="button"
                                    role="tab" aria-controls="v-pills-settings" aria-selected="false"><span><i
                                            class="fas fa-user-lock"></i></span>Product Offers</button>

                                <button id="banner-tab" class="nav-link" type="button"><span> <i class="fas fa-sign-out-alt"></i>
                                    </span>Banner Management</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-8 wow fadeInUp" data-wow-duration="1s">
                        <div class="fp__dashboard_content">
                            <div class="tab-content" id="v-pills-tabContent">

                                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                                    aria-labelledby="v-pills-home-tab">

                                    <div class="fp_dashboard_body">
                                        <h3 style="justify-content: center;">Order list</h3>
                                        <div class="fp_dashboard_order">
                                            <div class="table-responsive">
                                                <table class="table" id="orderTable">
                                                    <thead>
                                                        <tr class="t_header">

                                                            <th>Name</th>
                                                            <th>Order Date</th>
                                                            <th>Address</th>
                                                            <th>Total Price</th>
                                                            <th>Status</th>
                                                            <th>View Details</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <%if(orders.length>0){ %>
                                                            <% for(let i=0;i<orders.length;i++){ %>

                                                                <tr>

                                                                    <td>
                                                                        <h6>
                                                                            <%=orders[i].costumer.name%>
                                                                        </h6>
                                                                    </td>
                                                                    <td>
                                                                        <h5>
                                                                            <%=orders[i].orderDate%>
                                                                        </h5>
                                                                    </td>
                                                                    <td>
                                                                        <h5>
                                                                            <%=orders[i].address%>
                                                                        </h5>
                                                                    </td>
                                                                    <td>
                                                                        <h5>
                                                                            <%=orders[i].totalPrice%>
                                                                        </h5>
                                                                    </td>
                                                                    <td>
                                                                        <%if(orders[i].orderStatus==='Shipped'
                                                                            ||orders[i].orderStatus==='Returned'
                                                                            ||orders[i].orderStatus==='Cancelled' ) {%>
                                                                            <h5>
                                                                                <%=orders[i].orderStatus%>
                                                                            </h5>
                                                                            <%} else {%>
                                                                                <select name="orderStatus"
                                                                                    id="orderStatus"
                                                                                    onchange="updateStatus('<%=orders[i]._id%>', this.value)">
                                                                                    <option
                                                                                        value="<%=orders[i].orderStatus%>">
                                                                                        <%=orders[i].orderStatus%>
                                                                                    </option>
                                                                                    <option value="Pending">Pending
                                                                                    </option>
                                                                                    <option value="Processing">
                                                                                        Processing</option>
                                                                                    <option value="Shipped">Shipped
                                                                                    </option>
                                                                                    <option value="Delivered">Delivered
                                                                                    </option>
                                                                                    <option value="Cancelled">Cancelled
                                                                                    </option>
                                                                                </select>
                                                                                <%}%>
                                                                    </td>
                                                                    <td><a class="view_invoice"
                                                                            href="/admin/listAllOrders?id=<%=orders[i]._id%>">View
                                                                            details</a></td>

                                                                </tr>
                                                                <%}%>
                                                                    <%}%>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script>
        function updateStatus(orderId, status) {
            fetch('/admin/updateOrderStatus', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    orderId: orderId,
                    orderStatus: status
                })
            })
                .then(res => res.json)
                .then((res) => window.location.reload())
                .catch(error => console.error(error))
        }

        document.getElementById("dashboard-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/dashboard"
        })
        document.getElementById("users-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/usersList"
        })
        document.getElementById("orders-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/orderList"

        })
        document.getElementById("products-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/productList"

        })
        document.getElementById("category-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/categoryList"

        })
        document.getElementById("coupon-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/couponList"

        })
        document.getElementById("sales-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/salesReport"

        })
        document.getElementById("productOffer-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/productOffers"

        })
        document.getElementById("banner-tab").addEventListener("click", (event) => {
            window.location.href = "/admin/banner"

        })


    </script>

    <script src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.13.4/sp-2.1.2/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable();
        });
    </script>

</body>







