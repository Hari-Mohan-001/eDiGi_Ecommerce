    <section class="fp__signin">
        <div class="fp__signin_overlay pt_125 xs_pt_95 pb_100 xs_pb_70">
            <div class="container">
                <div class="row wow fadeInUp" data-wow-duration="1s">
                    <div class="col-xxl-5 col-xl-6 col-md-9 col-lg-7 m-auto">
                        <div class="fp__login_area">
                            <h2>Add Coupon</h2>
                            <p>Enter the credentials</p>
                            <form action="/admin/addCoupon" method="post" >
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label> Coupon Name</label>
                                            <input type="text" placeholder="Coupon Name" name="couponName" id="couponName" required>
                                            <span style="color: red;" id="productNameError"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label>Percentage</label>
                                            <input type="number" placeholder="Percentage" name="percentage" id="percentage" required>
                                           
                                        </div>
                                    </div>
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label>Minimum Purchase Amount</label>
                                            <input type="number" placeholder="Enter the Mininmum Purchase amount" name="minimumPurchase" id="minimumPurchase" required>
                                            <span style="color: red;"  id="productDescriptionError"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label>Maximum Discount</label>
                                            <input type="number" placeholder="Enter the maximum discount applicable" name="maximumDiscount" id="maximumDiscount" required>
                                            <span style="color: red;"  id="productBrandError"></span>
                                        </div>
                                    </div>
                                    
                                    
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <label>Expiry date</label>
                                            <input type="date" placeholder="Expiry Date" name="expiryDate" id="expiryDate" required>
                                            <span style="color: red;"  id="productPriceError"></span>
                                        </div>
                                    </div>
                                   
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput fp__login_check_area">
                                            <% if(typeof message !== "undefined") { %>
                                                <p style="color: rgba(202, 14, 14, 0.774);"><%=message%></p>
                                              <% } %>

                                           
                                        </div>
                                    </div>
                                    <div class="col-xl-12">
                                        <div class="fp__login_imput">
                                            <button type="submit" class="common_btn" id="addCoupon">
                                              Add</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
