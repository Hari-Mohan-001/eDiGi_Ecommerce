    <div class="fp_dashboard_body">
        <h3 style="justify-content: center;">Sales Report</h3>
        <form action="" method="get" style="width: 250px;">
            <div>
                <label for="start">Start Date</label>
                <input type="date" name="startDate" id="startDate">
            </div>
            <div>
                <label for="endDate">End Date</label>
                <input type="date" name="endDate" id="endDate" oninput="compareDate()" >
                <span style="color: red;" id="dateError"></span>
            </div>
            <div>
                <button style="margin-left: 180px; margin-top: 15px;margin-bottom: 15px;" class="btn btn-success" type="submit">Go</button>
            </div>
        </form>
            <div class="fp_dashboard_order">
                <div class="table-responsive">
        <table class="table" id="sales">
            <thead>
            
                <tr class="t_header">
                    
                    <th>Name</th>
                    <th>Order Date</th>
                    <th>Address</th>
                    <th>Total Price</th>
                    <th>Payment</th>
                    <th>View Details</th>

                </tr>
            </thead>
                <tbody>
          <%if(orders.length>0){ %>
              <% for(let i=0;i<orders.length;i++){ %>
            
            <tr>
                 
                <td>
                    <h6><%=orders[i].costumer.name%></h6>
                </td>
                <td>
                <h5><%=orders[i].orderDate%></h5>
                </td>
                <td>
                    <h5><%=orders[i].address%></h5>
                    </td>
                    <td>
                        <h5><%=orders[i].totalPrice%></h5>
                        </td>
                        <td>
                           
                            <h5><%=orders[i].payment%></h5>      
                            </td>
                            <td><a class="view_invoice" href="">View details</a></td>
                           
                </tr>
                <%}%>
                <%}%>
                                                        
         </tbody>
        </table>
        <div>
            <span style="font-weight: bolder;">Total Value :<%=totalValue%> </span>
        </div>
