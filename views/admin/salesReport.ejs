    <script>
        document.addEventListener("DOMContentLoaded", () => {
    // Retrieve the values from query parameters
    const urlSearchParams = new URLSearchParams(window.location.search);
    const params = Object.fromEntries(urlSearchParams.entries());

    // Set the values to date input fields
    document.getElementById('startDate').value = params.startDate || '';
    document.getElementById('endDate').value = params.endDate || '';
});
    </script>

    <script>
        const compareDate = () => {
            const startDate = document.getElementById("startDate").value
            const endDate = document.getElementById("endDate").value
            if (startDate >= endDate) {
                document.getElementById("dateError").textContent = "Start date should be greater than end date"
                document.getElementById("endDate").value = ""
            } else {
                document.getElementById("dateError").textContent = ""
            }
        }

        document.getElementById('salesReportForm').addEventListener('submit', () => {

            document.getElementById('startDate').value = document.getElementById('startDate').value
        })
    </script>

    <script>
        const downloadExcel =()=>{
             // Get the table element
        const table = document.getElementById("salesTable");
        // Convert the table to a worksheet object using SheetJS
        const worksheet = XLSX.utils.table_to_sheet(table);
        // Create a new workbook object and add the worksheet to it
        const workbook = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(workbook, worksheet, "Sales Report");
        // Save the workbook to a file and trigger a download
        XLSX.writeFile(workbook, "sales_report.xlsx");
        }
    </script>

    <script>
       const downloadPdf = ()=>{
        const table = document.getElementById('salesTable');
        const rows = table.querySelectorAll('tr');
        const columns =table.querySelectorAll('th,td');
        const data = [];
        for(let i=0;i<rows.length;i++){
          const rowData = [];
          const row = rows[i];
          const cols =row.querySelectorAll('th,td');

          for(let j=0;j<cols.length;j++){
            const cellData = cols[j].innerText;
            rowData.push(cellData);
          }
          data.push(rowData);
        }

        const docDefinition = {
          pageSize: { width: 842, height: 595, orientation: 'landscape' },
          content: [
            {text:'Sales Report (EdiGi)',style:'header'},
            {table:{headerRows:1,body:data}},
            {text:'Total : <%=totalValue%>', style:'total'}
          ],
          styles: {
            header:{fontSize:16, bold:true, margin:[0,0,0,10]},
            total:{fontSize:14, bold:true, margin:[0,30,0,0]}
          }
        };
        pdfMake.createPdf(docDefinition).download('sales-report.pdf');
       }
    </script>


